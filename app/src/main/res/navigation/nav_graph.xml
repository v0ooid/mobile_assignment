<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigationE_home">
    <fragment
        android:id="@+id/navigationE_home"
        android:name="my.edu.tarc.jobseek.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigationE_home_to_jobDetailFragment"
            app:destination="@id/jobDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigationE_noti"
        android:name="my.edu.tarc.jobseek.notification.NotifcationFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/navigationE_headHunting"
        android:name="my.edu.tarc.jobseek.headHunting.HeadHuntingFragment"
        android:label="Head Hunting"
        tools:layout="@layout/fragment_headhunting" />
    <fragment
        android:id="@+id/jobDetailFragment"
        android:name="my.edu.tarc.jobseek.job_detail.JobDetailFragment"
        android:label="fragment_job_detail"
        tools:layout="@layout/fragment_job_detail" >
        <action
            android:id="@+id/action_jobDetailFragment_to_navigationE_home"
            app:destination="@id/navigationE_home" />
    </fragment>
    <fragment
        android:id="@+id/appliedJobFragment"
        android:name="my.edu.tarc.jobseek.appiledJob.AppliedJobFragment"
        android:label="fragment_applied_job"
        tools:layout="@layout/fragment_applied_job" />

</navigation>